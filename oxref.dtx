\tcblower
\begin{Verbatim}
%</n|y>
@book{anon1822san,
  author = {Anonymous},
  title = {Stories after Nature},
  location = {London},
  publisher = {Allman},
  date = {1822}}
%<*n|y>
\end{Verbatim}
\end{bibexbox}

\begin{bibexbox}
%<n><OGS \S15.2.1>
%<y><OGS \S15.2.1\textdagger>
{anon1956lu}
%<n>\emph{Liber usualis} (Tournai: Desclée, 1956).
%<y>Anon.\@ (1956), \emph{Liber usualis} (Tournai: Desclée).\makeatletter\toggletrue{blx@bibliography}\makeatother
\tcblower
\begin{Verbatim}
%</n|y>
@book{anon1956lu,
  author = {Anonymous},
  title = {Liber usualis},
  location = {Tournai},
