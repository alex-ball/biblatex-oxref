  date = {1932},
  reporter = {JC},
  pages = {42},
  keywords = {sc}}
%<*n|m|a|y>
\end{Verbatim}
\end{bibexbox}

\begin{bibexbox}
<NHR \S13.4.1>
{michael1976}
\emph{Michael v Johnson}, 426 US 346 (1976)
\tcblower
\begin{Verbatim}
%</n|m|a|y>
