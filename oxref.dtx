  casenumber = {IV/M042},
  institution = {Commission},
  date = {1991},
  journaltitle = {OJ},
  series = {L},
  volume = {122},
  pages = {48},
  pardate = {1991},
  parreporter = {CLMR},
  parvolume = {4},
  parpages = {391},
  options = {paryear-essential}}
%<*n|m|a|y>
\end{Verbatim}
\end{bibexbox}

\tip{For ECHR cases, put the application number in the \code{number} field.}

\begin{bibexbox}
<NHR \S13.4.5>
{young1982}
\emph{Young, James and Webster v UK} (App no 7601/76) (1982) 4 EHRR 38
\tcblower
