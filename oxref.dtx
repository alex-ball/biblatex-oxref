%
%    \begin{macrocode}
\def\iflabeldateisanydate{%
  \ifboolexpr{%
    togl {blx@labeldateparts}
    and not test {\iffieldundef{labeldatesource}}
    and (
      test {\iffieldequalstr{labeldatesource}{year}}
      or not test {\iffieldundef{\thefield{labeldatesource}year}}
    )}}
