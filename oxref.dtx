  volume = {1-3},
  location = {Oxford},
  publisher = {Talboys},
  date = {1838/1839}}
@book{ritter1838hap4,
  volume = {4},
  location = {London},
  publisher = {Bohn},
  date = {1846}}
%<*n|m|a|y>
